{
  "name": "github-subdirectory",
  "version": "1.0.0",
  "description": "Library for downloading GitHub repository subdirectories using multiple strategies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "start": "bun run ./src/index.ts",
    "dev": "bun --watch run ./src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "github",
    "download",
    "subdirectory",
    "git",
    "sparse-checkout"
  ],
  "dependencies": {
    "@octokit/rest": "^19.0.7",
    "adm-zip": "^0.5.10",
    "axios": "^1.4.0",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/node": "^18.16.3",
    "bun-types": "latest",
    "typescript": "^5.0.4",
    "vitest": "^0.34.3",
    "mock-fs": "^5.2.0",
    "nock": "^13.3.3"
  }
}